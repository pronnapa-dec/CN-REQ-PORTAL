<!-- Scroll with content modal -->
<form id="frm_data" name="frm_data" autocomplete="off">
    <div class="modal effect-flip-vertical" id="modal-frm_data" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document" style="max-width:1300px !important;max-height: 400px !important;">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">@ViewData["Content-Title-Page"] Employee information</h6><button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <!--begin:: Widgets/Support Tickets -->
                    <div class="kt-portlet kt-portlet--height-fluid">
                        <div class="kt-widget3">
                            <div class="kt-widget3__item" style="padding: 0px 30px;">
                                @*1*@
                                <div class="row" style="padding-top: 10px;">
                                    <div class="form-group form-group-sm col-sm-2">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">รหัสพนักงาน code</label>
                                        <input class="col-sm-12 form-control form-control" id="employee_code" placeholder="ระบุรหัสพนักงาน" name="employee_code" type="number" value="" required>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-2">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">คำนำหน้า Prefix</label>
                                        <select class="col-sm-12 form-control form-control" id="employee_prefix" name="employee_prefix" required>
                                            <option value=""> ระบุคำนำหน้าชื่อ </option>
                                            <option value="คุณ">คุณ</option>
                                            <option value="นาย">นาย</option>
                                            <option value="นาง">นาง</option>
                                            <option value="นางสาว">นางสาว</option>
                                            <option value="ว่าที่ร้อยตรีหญิง">ว่าที่ร้อยตรีหญิง</option>
                                            <option value="Mr.">Mr.</option>
                                            <option value="Mrs.">Mrs.</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-5">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ชื่อพนักงาน Name</label>
                                        <input class="col-sm-12 form-control form-control lname emmas_input" placeholder="ระบุชื่อพนักงาน" id="employee_name" name="employee_name" type="text" value="" required>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ชื่อเล่น Nickname</label>
                                        <input class="col-sm-12 form-control lname emmas_input" id="employee_nickname" placeholder="ระบุชื่อเล่น" name="employee_nickname" type="text" value="" required>
                                    </div>
                                </div>
                                @*2*@
                                <div class="row" style="padding-top: 10px;">
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ฝ่าย Section<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_sec" id="employee_sec_id"  name="employee_sec" placeholder="กรุณาเลือก" required>
                                            <option value="">ระบุผ่าย</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">แผนก Department<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_dept" id="employee_dept_id" name="employee_dept" placeholder="กรุณาเลือก" required>
                                            <option value="">ระบุแผนก</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ตำแหน่ง Position<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_pos" id="employee_pos_id" name="employee_pos" placeholder="กรุณาเลือก" required>
                                            <option value="">ระบุตำแหน่ง</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">วันที่เริ่มงาน Start Date</label><br/>
                                        <input class="form-control form-control fc-datepicker" id="employee_job_startdate" name="employee_job_startdate" placeholder="ระบุวันที่เริ่มงาน" type="text" value="" autocomplete="off" required>
                                    </div>
                                </div>
                                @*3*@
                                <div class="row" style="padding: 10px 0px;">
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ผู้ทำการประเมิน คนที่1<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_leader_asses1" id="employee_leader_asses1" name="employee_leader_asses1" placeholder="กรุณาเลือก">
                                            <option value="">ผู้ทำการประเมิน</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ผู้ทำการประเมิน คนที่2<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_leader_asses2" id="employee_leader_asses2" name="employee_leader_asses2" placeholder="กรุณาเลือก">
                                            <option value="">ผู้ทำการประเมิน</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">ผู้ทำการประเมิน คนที่3<span style="color: red;"></span></label>
                                        <select class="form-control form-control-sm custom-select employee_leader_asses3" id="employee_leader_asses3" name="employee_leader_asses3" placeholder="กรุณาเลือก">
                                            <option value="">ผู้ทำการประเมิน</option>
                                        </select>
                                    </div>
                                    <div class="form-group form-group-sm col-sm-3">
                                        <label class="col-sm-12 col-form-label" style="text-align: left;font-weight: bold;">แบบฟอร์มการประเมิน Form<span style="color: red;"></span></label>
                                        <select class="form-control form-control" style="width: 100%;" id="employee_form_id" name="employee_form" required>
                                            <option value="">ระบุแบบฟอร์ม</option>
                                            <option value="1">ระดับปฏิบัติการ</option>
                                            <option value="2">ระดับบริหาร</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!--end:: Widgets/Support Tickets -->
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-submit" class="btn btn-primary btn-save_form">บันทึก</button>
                        <button type="button" id="btn-cancel"class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Scroll with content modal -->
</form>
