<!-- Basic modal -->
<div class="modal effect-flip-vertical" id="modal-frm_approval" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">คำขออนุมัติเอกสาร</h6><button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p class="tx-12 text-muted">อนุมัติเอกสารโดยไม่ผ่านขั้นตอนสาขารับสินค้า</p>
                <div class="row row-sm">
                    <div class="col-12">
                        <form class="form-horizontal" id="frm_approval" name="frm_approval" autocomplete="off">
                            <div class="form-group-sm">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="tr_number" class="col-form-label">เลขที่เอกสาร</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">#</span>
                                            </div>
                                            <input type="text" class="form-control text-center" id="p_job_no" name="p_job_no" required placeholder="" disabled>
                                            <span class="input-group-btn">
                                                <button class="btn ripple btn-dark br-tl-0 br-bl-0 btn-action" id="btn-history_job" type="button" data-placement="top" data-toggle="tooltip-primary" title="History log"><i class="las la-history"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label for="tr_date" class="col-form-label">วันที่เอกสาร</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                                </div>
                                            </div>
                                            <input class="form-control text-center fc-datepicker hasDatepicker" placeholder="MM/DD/YYYY" type="text" id="p_job_date" name="p_job_date" required disabled>
                                        </div>
                                    </div>
                            
                                    <div class="col-lg-12">
                                        <label for="job_status" class="col-form-label">สถานะ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text bg-info-transparent">
                                                    <i class="typcn typcn-mortar-board tx-24 text-info lh--9 op-6"></i>
                                                </div>
                                            </div>
                                            <select class="form-control text-center select2-no-search" id="p_job_status" name="p_job_status" data-width="89%" required disabled>
                                                <option value="" selected>- เลือกสถานะ -</option>
                                                <option value="OPEN" selected>OPEN</option>
                                                <option value="ON_PROCESS">ON PROCESS</option>
                                                <option value="RECEIVE">RECEIVE</option>
                                                <option value="APPROVAL">APPROVAL</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <label for="job_user_approval" class="col-form-label">ผู้อนุมัติ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text bg-success-transparent">
                                                    <i class="las la-user-check tx-24 text-success lh--9 op-6"></i>
                                                </div>
                                            </div>
                                            <select class="form-control select2 user_approval" id="p_job_user_approval" name="p_job_user_approval" required data-width="89%" disabled>
                                                <option value="" selected="">- เลือกผู้อนุมัติ -</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group-sm">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label for="job_status" class="col-form-label">หมายเหตุ</label>
                                        <textarea class="form-control" id="p_job_remark" placeholder="คำอธิบายเพิ่มเติม" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn ripple btn-primary btn-action" type="button" id="btn-approval">ยืนยันการอนุมัติ</button>
                <button class="btn ripple btn-secondary" data-dismiss="modal" type="button">ปิด</button>
            </div>
        </div>
    </div>
</div>
<!-- End Basic modal -->
