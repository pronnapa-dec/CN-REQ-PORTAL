<form class="form-horizontal" id="frm_remark" name="frm_remark" autocomplete="off">
    <div class="modal effect-flip-vertical" id="modal-frm_remark" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">ประวัติหมายเหตุ</h6><button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="col-form-label">เลขที่เอกสาร :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="remark_tr_number" name="remark_tr_number" placeholder="" required="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="col-form-label">สินค้า :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="remark_tr_item" name="remark_tr_item" placeholder="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="col-form-label">บาร์โค้ด :</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="remark_tr_barcode" name="remark_tr_barcode" placeholder="" disabled>
                            </div>
                            <div class="col-md-2">
                                <label class="col-form-label">จำนวน :</label>
                            </div>
                            <div class="col-md-3">
                                <input type="number" min="1" step="1" value="1" class="form-control" id="remark_tr_qty" name="remark_tr_qty" placeholder="" required="">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="col-form-label">สาเหตุ :</label>
                            </div>
                            <div class="col-md-10">
                                <select class="form-control select2" id="remark_cause" name="remark_cause" data-width="100%" required>
                                    <option value="" selected="">--เลือกสาเหตุ--</option>
                                    <option value="ขาย">ขาย</option>
                                    <option value="หาย">หาย</option>
                                    <option value="หาไม่เจอ">หาไม่เจอ</option>
                                    <option value="ของมาผิด">ของมาผิด</option>
                                    <option value="ของชิ้นใหญ่">ของชิ้นใหญ่</option>
                                    <option value="ของมาไม่ครบ">ของมาไม่ครบ</option>
                                    <option value="รอแพ็ค">รอแพ็ค</option>
                                    <option value="ผิดชั้น">ผิดชั้น</option>
                                    <option value="ผิดคลัง">ผิดคลัง</option>
                                    <option value="จัดให้สาขา">จัดให้สาขา</option>
                                    <option value="อื่นๆ">อื่นๆ</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group d-none">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="col-form-label">คำอธิบาย :</label>
                            </div>
                            <div class="col-md-10">
                                <textarea rows="2" class="form-control" id="remark_more" name="remark_more" style="width:100%"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <table id="table_remark" class="table table-bordered table-striped table-hover mg-b-0 text-md-nowrap" style="width:100%">
                                @*<thead style="font-size:11px; text-align:center">
                                    <tr>
                                        <th valign="middle" class="tx-center">ลำดับ</th>
                                        <th valign="middle" class="tx-center">สาเหตุ</th>
                                        <th valign="middle" class="tx-center">จำนวน</th>
                                        <th valign="middle" class="tx-center">คำอธิบาย</th>
                                        <th valign="middle" class="tx-center">ผู้บันทึก</th>
                                        <th valign="middle" class="tx-center">วันที่สรุป</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>*@
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn ripple btn-primary btn-action" type="button" id="bth-save_remark">บันทึก</button>
                    <button class="btn ripple btn-danger btn-action d-none" type="button" id="bth-delete_remark">ลบ</button>
                    <button class="btn ripple btn-secondary" data-dismiss="modal" type="button">ปิด</button>
                </div>
            </div>
        </div>
    </div>
</form>