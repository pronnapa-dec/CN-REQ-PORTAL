<form id="frm_upload" name="frm_upload" autocomplete="off">
    <div class="modal effect-flip-vertical" id="modal-frm_upload" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">บันทึกเอกสารที่เกี่ยวข้อง</h6><button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">

                    <div class="form-group form-group-sm row">
                        <label for="document_date" class="col-md-2 col-form-label tx-left">วันที่ :</label>
                        <div class="col-md-10">
                            <div class="row row-sm ">
                                <div class="input-group col-md-12">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                        </div>
                                    </div><input class="form-control fc-datepicker" placeholder="MM/DD/YYYY" id="document_date" name="document_date" type="text" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-group-sm row">
                        <label for="document_type" class="col-md-2 col-form-label tx-left">ประเภท : </label>
                        <div class="col-md-10">
                            <select type="text" class="form-control select2" id="document_type" name="document_type" required>
                                <option value="">--- เลือกประเภท ---</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group form-group-sm row">
                        <label for="document_remark" class="col-md-2 col-form-label tx-left">หมายเหตุ : </label>
                        <div class="col-md-10">
                            <textarea class="form-control" id="document_remark" placeholder="รายละเอียด" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="form-group form-group-sm row">
                        <label for="document_file" class="col-md-2 col-form-label tx-left">ไฟล์ : </label>
                        <div class="col-sm-10">
                            <input type="file" class="dropify" data-height="200" id="document_file" name="document_file" required @*accept=".jpg, .png, image/jpeg, image/png, html, zip, css,js"*@ />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn ripple btn-primary" id="btn-upload_file" type="button">บันทึก</button>
                    <button class="btn ripple btn-secondary" data-dismiss="modal" type="button">ปิด</button>
                </div>
            </div>
        </div>
    </div>
</form>