<div class="col-12 col-sm-12">
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0 pb-0">@ViewData["Content-Title-Page"]</h5>
            <div class="main-dashboard-header-right">
                <div>
                    <label class="tx-13">จำนวนสินค้า</label>
                    <div><h5 id="sum_qty_item">0</h5>รายการ</div>
                </div>
                <div>
                    <label class="tx-13">จำนวนปัจจุบัน</label>
                    <div><h5 id="sum_qty_current">0</h5> หน่วย</div>
                </div>
                <div>
                    <label class="tx-13">จำนวนทั้งหมด</label>
                    <div><h5 id="sum_qty_total">0</h5> หน่วย</div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form class="form-horizontal" id="frm_job" name="frm_job" autocomplete="off">
                <div class="kt-portlet__body">
                    <div class="form-group form-group-sm row">
                        <label class="col-md-1 col-form-label">เลขที่ IV</label>
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="inv_number" name="inv_number" value=""> <span class="input-group-btn"><button class="btn btn-dark " type="reset" id="btn-main" onClick="window.location.reload();"><span class="input-group-btn"><i class="fas fa-redo-alt"></i></span></button></span>
                            </div>
                        </div>
                        <label class="col-md-1 col-form-label">เลขที่ PK</label>
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="pk_number" name="pk_number" value="" disabled>
                            </div>
                        </div>
                        <label class="col-md-1 col-form-label">วันที่ IV</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="inv_date" name="inv_date" value="" disabled>
                        </div>
                    </div>
                    <!-- 1 -->
                    <div class="form-group form-group-sm row">
                        <label class="col-md-1 col-form-label">ลูกค้า</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="inv_emmas" name="inv_emmas" value="" disabled>
                        </div>
                        <label class="col-md-1 col-form-label">ที่อยู่/จัดส่ง</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inv_address" name="inv_address" value="" disabled>
                        </div>
                    </div>
                    <!-- 2 -->
                    <div class="form-group form-group-sm row hideny d-none">
                        <label class="col-md-1 col-form-label ">บาร์โค้ด</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="gbarcode" name="gbarcode" value="">
                        </div>
                        <label class="col-md-1 col-form-label">จำนวน</label>
                        <div class="col-md-3">
                            <input type="number" class="form-control" id="job_detail_qty" name="job_detail_qty" value="1" min="0" step="1" required data-parsley-error-message="" disabled>
                        </div>
                        <label class="col-md-1 col-form-label ">ผู้ตรวจสอบ</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="user" name="user" value="" disabled>
                        </div>
                    </div>
                </div>
            </form>
            <div class="border-top my-3"></div>
            <div class="table-responsive mg-t-20">
                <table id="tbl-list" class="table table-bordered table-striped table-hover mg-b-0 text-md-nowrap">
                    <thead>
                        <tr>
                            <th class="d-none">id</th>
                            <th><div style="text-align:center;">ลำดับ</div></th>
                            <th><div style="text-align:center;">บาร์โค้ด</div></th>
                            <th><div style="text-align:center;">ชื่อสินค้า</div></th>
                            <th><div style="text-align:center;">เลขอะไหล่</div></th>
                            <th><div style="text-align:center;">จำนวนย่อย</div></th>
                            <th class="d-none"><div style="text-align:center;" >จำนวนหลัก</div></th>
                            <th><div style="text-align:center;">หน่วยนับ</div></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
