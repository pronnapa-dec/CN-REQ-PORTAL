<div class="col-12 col-sm-12">
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0 pb-0">@ViewData["Content-Title-Page"]</h5>
        </div>

        <div class="card-body">
            <form class="form-horizontal" id="frm_search" name="frm_search" autocomplete="off">
                <div class="kt-portlet__body">
                    <!-- 1 -->
                    <div class="form-group form-group-sm row">
                        <label class="col-md-2 col-form-label">เลขที่อ้างอิง RT : </label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="rt_no" name="rt_no" value="">
                        </div>
                        <label class="col-md-2 col-form-label">วันที่ RT : </label>
                        <div class="col-md-4">
                            <div class="input-group date">
                                <input class="form-control date-picker" id="rt_date" name="rt_date" type="text" value="">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="la la-calendar-check-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 2 -->

                    <div class="form-group form-group-sm row">

                        <label class="col-sm-2 col-form-label">สาขา : </label>
                        <div class="col-sm-4">
                            <select class="form-control" id="rt_branch" name="rt_branch" data-width="100%">
                                <option value=""></option>
                            </select>
                        </div>
                        <label class="col-md-2 col-form-label">ผู้สร้างเอกสาร : </label>
                        <div class="col-md-4">
                            <select class="form-control rt_createby" id="rt_createby" name="rt_createby" data-width="100%">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group mb-0 mt-3 justify-content-end" align="right">
                        <div align="right">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="reset" class="btn btn-secondary">Cancel</button>
                        </div>
                    </div>
                </div>

            </form>

            <div class="border-top my-3"></div>

            <div class="table-responsive mg-t-20">
                <table id="tbl-rt_list" class="table table-bordered table-striped table-hover mg-b-0 text-md-nowrap"></table>
            </div>
        </div>
    </div>
</div>
