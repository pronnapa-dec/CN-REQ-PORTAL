<!-- Scroll with content modal -->
<form id="frm_upload_photo" name="frm_upload_photo" autocomplete="off">
    <div class="modal effect-flip-vertical" id="modal-upload_photo" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-xl modal-dialog-scrollable modal-dialog-centered" role="document">
            <div class="modal-content modal-content-demo" style="width: 115%">
                <div class="modal-header justify-content-between">
                    <div class="my-auto">
                        <div class="d-flex">
                            <h6 class="modal-title">Upload Photo To Modelmixed</h6><span id="modelmix" class="modal-title ml-1 tx-primary"></span>
                        </div>
                    </div>
                    <div class="d-flex my-xl-auto right-content">
                        <div class="mb-6 mb-xl-0">
                            <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label for="p_vehicle_brand" class="col-sm-4 col-form-label">Vehicle Brand</label>
                                <div class="col-sm-8">
                                    <select id="p_vehicle_brand" class="form-control select2">
                                        <option value=""> ---select--- </option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="p_vehicle_segments" class="col-sm-4 col-form-label">Vehicle Segments</label>
                                <div class="col-sm-8">
                                    <select id="p_vehicle_segments" class="form-control select2">
                                        <option value="">---select---</option>
                                        @*<option value="CAR">CAR</option>
                                            <option value="TRUCK">TRUCK</option>*@
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="p_carmodelmix" class="col-sm-4 col-form-label">Carmodel Mix<span class="tx-danger">*</span></label>
                                <div class="col-sm-8">
                                    <select id="p_carmodelmix" class="form-control select2" data-vehicle_model="" data-minor_change="" data-model_change="" data-body_type="" data-hign_stant="" data-street_name="" data-wheel_drive="" data-wheel="" data-chassis_model="">
                                        <option value=""> ---select--- </option>
                                    </select>
                                </div>
                            </div>
                            <div class="border-top my-3"></div>
                            <div class="mg-t-5">
                                <input id="upload_photo_main" type="file" class="dropify" data-height="200" name="files" accept=".jpg, .png, image/jpeg, image/png" />
                            </div>

                            <div class="form-group mg-t-10">
                                <table id="tbl-up_photo" class="table table-striped table-hover mg-b-0 text-md-nowrap" width="100%">
                                    <thead>
                                        <tr>
                                            <th colspan="4" class="tx-center bg-warning">photo model</th>
                                        </tr>
                                        <tr>
                                            <th></th>
                                            <th>PHOTO</th>
                                            <th>DETAILS</th>
                                            <th class="tx-center">ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                            <div class="form-group mg-t-10" style="overflow-x:visible">
                                <table id="tbl-model_photo" class="table table-striped table-hover mg-b-0 text-md-nowrap d-none" width="100%">
                                    <thead>
                                        <tr>
                                            <th colspan="5" class="tx-center bg-warning">item modelmix</th>
                                        </tr>
                                        <tr>
                                            <th></th>
                                            <th>MODEL_ID</th>
                                            <th>MODELMIX</th>
                                            <th>GROUP</th>
                                            <th class="tx-center">ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mt-2 carousel-slider">
                                <div id="carousel" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active"><img id="up_photo_1" src="" alt="img"> </div>
                                        <div class="carousel-item"> <img id="up_photo_2" src="" alt="img"> </div>
                                        <div class="carousel-item"> <img id="up_photo_3" src="" alt="img"> </div>
                                        <div class="carousel-item"> <img id="up_photo_4" src="" alt="img"> </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                                        <i class="fa fa-angle-left fs-30" aria-hidden="true"></i>
                                    </a>
                                    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                                        <i class="fa fa-angle-right fs-30" aria-hidden="true"></i>
                                    </a>
                                </div>
                                <div class="demo-gallery">
                                    <div id="thumbcarousel" class="carousel slide" data-interval="false">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <div data-target="#carousel" data-slide-to="0" class="thumb"><img id="up_photo_slide_1" src="" alt="img" data-id=""></div>
                                                <div data-target="#carousel" data-slide-to="1" class="thumb"><img id="up_photo_slide_2" src="" alt="img" data-id=""></div>
                                                <div data-target="#carousel" data-slide-to="2" class="thumb"><img id="up_photo_slide_3" src="" alt="img" data-id=""></div>
                                                <div data-target="#carousel" data-slide-to="3" class="thumb"><img id="up_photo_slide_4" src="" alt="img" data-id=""></div>
                                            </div>
                                        </div>
                                        <a class="carousel-control-prev" href="#thumbcarousel" role="button" data-slide="prev">
                                            <i class="fa fa-angle-left fs-20" aria-hidden="true"></i>
                                        </a>
                                        <a class="carousel-control-next" href="#thumbcarousel" role="button" data-slide="next">
                                            <i class="fa fa-angle-right fs-20" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btn-upload_pic" class="btn ripple btn-primary d-none" style="width: 100px;" data-action="save_pic" type="submit">Upload</button>
                    <button class="btn ripple btn-secondary" style="width: 100px;" data-dismiss="modal" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Scroll with content modal -->
</form>